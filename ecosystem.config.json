{
  "apps": [

    {
      "name": "water-api",
      "ignore_watch": [
        "node_modules",
        "src/lib/temp",
        "temp"
      ],
      "script": "index.js",
      "env": {
        "watch": true
      },
      "env_production": {
        "watch": false,
        "instances" : "max",
        "exec_mode" : "cluster"
      }
    },

    {
      "name": "water-api-import",
      "ignore_watch": [
        "node_modules",
        "src/lib/temp",
        "temp"
      ],
      "script" : "import.js",
      "env": {
        "watch": true
      },
      "env_production": {
        "watch": false,
        "instances" : "1"
      }
    }


  ]
}
